<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>     
  <session-factory>
    <property name="connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="connection.url">jdbc:oracle:thin:@localhost:1521:(hiddenName)</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:(hiddenName)</property>
    <property name="connection.username">(hiddenUser)</property>
    <property name="connection.password">(hiddenPswd)</property>
    <property name="dialect">org.hibernate.dialect.Oracle12cDialect</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="show_sql">true</property>
         
    <mapping class="com.codeEra.code_era" />
    <mapping class="com.codeEra.code_era.model" /> 
    <mapping class="com.codeEra.code_era.exception" /> 
    <mapping class="com.codeEra.code_era.repository" /> 
    <mapping class="com.codeEra.code_era.controller" /> 
  </session-factory>
</hibernate-configuration>